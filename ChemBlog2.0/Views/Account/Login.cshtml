@model ChemBlog2._0.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<style>
    .container {
        margin-left: 200px;
        margin-top: 30px;
    }
</style>
<code>@ViewBag.ErrorMessage</code>
<span class="border">
    <div class="container"
    <div class="mx-auto">
        <div class="shadow p-3 mb-5 bg-body-tertiary rounded" style="width:430px;">
            <form method="post" asp-action="Login" asp-asp-route-pageURL="@ViewData["PageURL"]">
                <div class="text-center"><b><h4>Login</h4></b>
                    <img src="~/Uploads/LoginIcon.png" class="rounded" style="height:80px;" alt="Cinque Terre">
                </div>
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <div class="col-sm-15">
                        <input class="form-control" asp-for="UserName" placeholder="Email Id" style="width:400px;" />
                    </div>
                </div>
                </br>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <div class="col-sm-15">
                        <input class="form-control" asp-for="Password" placeholder="Password" style="width:400px;>
                    </div>
                </div>
                <div class="form-group">
                    </br>
                    <div class="text-center" col-sm-15>
                        <input type="submit" class="btn btn-dark w-40" value="Login" />
                        <a class="btn btn-warning w-40" asp-area="" asp-controller="Account" asp-action="Registration">Register</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
</span>