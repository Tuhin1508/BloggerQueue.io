@model List<ChemBlog2._0.Models.AdminPanelEntity>
<style>
    .shadow p-3 mb-5 bg-white rounde {
        color:darkblue;
    }
</style>
<div class="container">
    </br>
    <style>
        .card
        {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }
    </style>
</div>
<div class="container">
    @if(Model!=null)
    {
        @for (int i = 0; i < Model.Count(); i += 3)
        {
            <div class="row">
                @foreach (var item in Model.Skip(i).Take(3))
                {
                    <div class="col-md-4">
                        <div class="card">
                            <img src="@item.ImagePath" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@item.Heading</h5>
                                <p class="card-text">@item.ShortDescription</p>
                            </div>
                            <form method="post" asp-action="ReadArticle" asp-controller="Admin">
                                <input type="submit" name="Read+@item.Id" class="btn btn-primary w-100" value="Read Article"></input>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>